<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_warn_gps_off"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        card_view:cardBackgroundColor="#b71c1c"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="4dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/textview_warn_gps_off"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="@string/warning_location_services_off"
                android:textSize="16sp"
                android:textStyle="normal"/>
            <RelativeLayout android:id="@+id/tracker_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <Button
                    android:id="@+id/button_location_providers"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="@string/change"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Spinner android:id="@+id/spinner_trackers"
        android:layout_width="match_parent"
        android:layout_height="80dip"/>

    <RelativeLayout android:id="@+id/tracker_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
            android:id="@+id/button_toggle_clockin_state"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_play"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/label_toggle_clockin_state_start"
            />
        <Button
            android:id="@+id/button_toggle_wifi"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_wifi"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/label_auto_detection_on"
            weight="5"
            />
    </RelativeLayout>

    <com.firebirdberlin.tinytimetracker.MainView
        android:id="@+id/main_time_view"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0px"
        />

    <RelativeLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/textview_mean_value"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/textview_saldo"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="normal"/>
    </RelativeLayout>
</LinearLayout>

