<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_group_aggregation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_aggregation_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aggregation_detail"/>
        <RadioButton android:id="@+id/radio_aggregation_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aggregation_day"/>
        <RadioButton android:id="@+id/radio_aggregation_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aggregation_week"/>
        <RadioButton android:id="@+id/radio_aggregation_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aggregation_year"/>
    </RadioGroup>
    <ListView android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"/>

    <TextView android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No data"/>
</LinearLayout>

